{
  "name": "Mobx Visualizer",
  "version": "1.0.1",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "storage",
    "http://*/*", 
    "https://*/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/content-script.js"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [{
    "resources": ["scripts/inject-script.js"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "16": "/logo16.png",
    "32": "/logo32.png",
    "48": "/logo48.png",
    "128": "/logo128.png" 
  }
}
